<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:layout_alignParentBottom="true"
    >
<androidx.cardview.widget.CardView
android:id="@+id/send_notification_card"
android:layout_width="match_parent"
android:layout_height="wrap_content"
 >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/activity_main_image"
            android:src="@drawable/app_icon_purple"
            android:layout_width="200dp"
            android:layout_height="150dp"/>
        <LinearLayout
            android:layout_gravity="center"
            android:paddingHorizontal="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/activity_main_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hatice"
                style="@style/TextAppearance.AppCompat.Title"
                />
            <TextView
                android:textSize="12sp"
                android:id="@+id/activity_main_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todays delicious meals are too much for me.I would be glad to share them by someone who wants"
                />
            <TextView
                android:id="@+id/activity_main_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5511550239"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_marginVertical="2dp"
        android:id="@+id/activity_main_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/i_am_coming"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>