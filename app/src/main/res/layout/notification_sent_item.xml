<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="4dp"
    >
    <androidx.cardview.widget.CardView
        android:padding="8dp"
        android:id="@+id/send_notification_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/sent_item_image"
                    android:src="@drawable/app_icon_purple"
                    android:layout_width="160dp"
                    android:layout_height="120dp"/>
                <LinearLayout
                    android:paddingHorizontal="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/host_name"
                        style="@style/TextAppearance.AppCompat.Title"
                        />
                    <TextView
                        android:id="@+id/sent_item_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/host_name"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_number"
                        style="@style/TextAppearance.AppCompat.Title"
                        />
                    <TextView
                        android:id="@+id/sent_item_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Number"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/sent_item_status"
                        android:src="@drawable/ic_waiting"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>